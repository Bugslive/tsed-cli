{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "noEmit": true,
    "types": [{{#if vitest}}
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "vitest",{{/if}}
      {{#if jest}}
      "jest",{{/if}}
      "node"
    ]
  },
  "include": [{{#if vitest}}
    "vitest.config.mts",{{/if}}
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules"
  ]
}
